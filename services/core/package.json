{
  "name": "core",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "$(go env GOPATH)/bin/air",
    "build": "CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o core cmd/core/main.go",
    "gqlgen": "go run github.com/99designs/gqlgen generate --config cmd/core/gqlgen.yml",
    "sqlc": "go run github.com/sqlc-dev/sqlc/cmd/sqlc generate",
    "test": "go test ./...",
    "lint": "go vet ./...",
    "format": "gofmt -w .",
    "format:check": "gofmt -l . | grep . && exit 1 || exit 0"
  }
}